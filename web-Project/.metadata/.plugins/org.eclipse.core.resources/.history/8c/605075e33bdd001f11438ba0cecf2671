		<td><input type="password" name="pass"></td>
	</tr>
	<tr>
		<td colspan="2" align="right">
			<input type="submit" value="登録" name="reg">
			<input type="submit" value="ログイン" name="login">
		</td>	
	</tr>
</table>
</form>

