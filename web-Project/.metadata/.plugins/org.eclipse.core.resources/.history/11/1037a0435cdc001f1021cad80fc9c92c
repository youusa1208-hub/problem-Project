package db;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import java.util.*;
import beans.*;
import dao.*;

/**
 * Servlet implementation class Srv24_PokeIns
 */
@WebServlet("/Srv24_PokeIns")
public class Srv24_PokeIns extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public Srv24_PokeIns() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {

//		Ptypeテーブルｎデータを取得し、PokeIns.jspに転送
		try(PokeDao pd = new PokeDao()){
			List<PokeBean> list = pd.select();
			request.setAttribute("li", list);
			
		}catch(Exception e){
			throw new ServletException(e);
		}
//		転送先の指定
		String url = "Srv24_PokeIns.jsp";
		request.getRequestDispatcher(url).forward(request, response);
		}
		

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {

		try(PokeDao pd = new PokeDao()){
//			insert()メソッドの引数用にPokeBeanのインスタンスを生成
			PokeBean pb = new PokeBean();
//			int pid = Integer.parseInt(request.getParameter("pid"));
			pb.setPname(request.getParameter("pname"));
			pb.setPimg(request.getParameter("pimg"));
			int ptid = Integer.parseInt(request.getParameter("ptid"));
			pb.setPtid(ptid);
//			insertの実行
			pd.insert(pb);
			
			List<PokeBean> list = pd.select();
			request.setAttribute("li", list);
		}catch(Exception e){
			throw new ServletException(e);
		}
		String url = "Srv24_PokeList.jsp";
		request.getRequestDispatcher(url).forward(request, response);
	}

}
