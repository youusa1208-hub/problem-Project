package db;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;
import beans.PmBean;
import dao.PmDao;

/**
 * Servlet implementation class Srv25_Pmlogin
 */
@WebServlet("/Srv25_Pmlogin")
public class Srv25_Pmlogin extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public Srv25_Pmlogin() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {

	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {

//	登録/ログインどちらの場合もここで処理する
//	【A】送信データ「reg」が存在→登録
//		以下の３つのどれかに該当する場合変数msgに「登録出来ません」と格納し、転送
//		・ユーザー名かパスワードに入力文字列が0文字
//		・ユーザー名とパスワードが同一
//		・登録済みのユーザー名
//		上記以外の場合→pmasterテーブルにデータを登録し変数msgに[登録しました]と格納し、転送
//	【B】送信データ「login」が存在→ログイン
//		ユーザー名とパスワードがpmasterの値と一致
//			→ログイン状態に移行(sessionにPmBeanの値を格納)
//		pmasterの値と一致しない→変数msgに[ログインできません]と格納し、転送
//	【A】【B】どちらの場合も転送先はSrv25_PmLogin.jspにする	
		
	String reg = request.getParameter("reg");
	String login = request.getParameter("login");
	String name = request.getParameter("name");
	String pass = request.getParameter("pass");
	try(PmDao pd = new PmDao()){
		if(reg!=null){		//登録ボタンの場合
			boolean existsName = pd.existsData(name);
			String err = null;
			String msg = "登録できません";
			if(name.equals("") || pass.equals("")){
				err="空欄は無効です";
			}else if(name.equals(pass)){
				err="ユーザー名とパスワードに同じ値は設定できません";
			}else if(existsName){
				err="既に登録されているユーザー名です";
			}else{
				pd.insert(name, pass);
				msg="登録しました";
			}
		if(err!=null){
				request.setAttribute("error", err);
			}
				request.setAttribute("msg", msg);
			}else if(login!=null){	//ログインの場合
				PmBean p =pd.search(name, pass);
				request.setAttribute("msg", "ログインできません");
			}else{
				HttpSession session = request.getSession();
				session.setAttribute("pm", p);
				request.setAttribute("msg", "ログインしました");
			}
	
	}catch(Exception e){
		throw new ServletException(e);
	
		String url ="Srv25_PmLogin.jsp";
		request.getRequestDispatcher(url).forward(request, response);
	
	}
	}
}
